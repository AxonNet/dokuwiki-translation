{% extends 'dokuwikiTranslatorBundle:Default:index.html.twig' %}

{% block content %}
<ul class="breadcrumb">
    <li><a href="{{ path('dokuwiki_translator_homepage') }}">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Add a Plug-In</a></li>
</ul>
<div class="container">
    <div class="row">
        <div class="span12">
            <div class="page-header">
                <h1>Plug-in Translation</h1>
            </div>
        </div>
        <div class="span6">
            <p>
                Welcome to the plug-in translation page.
                The translation tool provides a simple translation interface.
                Everybody will be able to use this tool and create a translation
                of your plugin.
                When you've added your plug-in you will receive translations as git patch via email or as
                <a href="https://help.github.com/articles/using-pull-requests" target="_blank">GitHub pull request</a>.
            </p>
        </div>
        <div class="span6">
            <p>
                To use this tool your plug-in must
            </p>
            <ul>
                <li>a public Git repository.</li>
                <li>listed on the <a href="https://www.dokuwiki.org/plugins">plugins list</a></li>
                <li>
                    use the <a href="https://www.dokuwiki.org/devel:localization">DokuWiki localization functions</a>
                </li>
            </ul>
        </div>

        <div class="span8 offset2">
            <form action="{{ path('dokuwiki_translator_plugin_add_description') }}" class="form-horizontal" method="post">
                <div class="control-group">
                    <div class="control-label">
                        <label for="formMail">E-Mail address</label>
                    </div>
                    <div class="controls">
                        <input id="formMail" type="text" name="mail" class="input-xlarge"
                                placeholder="user@example.com" />
                    </div>
                </div>

                <div class="control-group">
                    <div class="control-label">
                        <label for="formGit">Git URL</label>
                    </div>
                    <div class="controls">
                        <input id="formGit" type="text" name="git" class="input-xlarge"
                                placeholder="git://github.com/splitbrain/dokuwiki.git" />
                    </div>
                </div>

                <div class="controls">
                    <input type="submit" class="btn btn-primary" value="Add my plug-in!" />
                    <input type="reset" class="btn" value="Reset" />
                    <a href="{{ path('dokuwiki_translator_homepage') }}" class="btn">
                        Abort
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

{% endblock %}